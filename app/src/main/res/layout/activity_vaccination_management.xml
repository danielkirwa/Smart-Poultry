<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChickenManagement">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="13dp"
            android:background="@color/colorPrimary"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:textSize="20sp"
                android:textColor="@color/colorWhite"
                android:layout_marginTop="14dp"
                android:layout_marginLeft="10dp"
                android:text="Vaccination status  :"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="18sp"
                android:textColor="@color/colorWhite"
                android:layout_marginTop="14dp"
                android:text="@string/null_string"/>
        </LinearLayout>
        <LinearLayout
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">
            <Button
                android:id="@+id/show_timetable"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:text="View time table"
                android:layout_marginRight="8dp"
                android:background="@color/colorPrimary"
                android:textColor="@color/white"/>
            <Button
                android:id="@+id/show_enroll"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="+"
                android:layout_marginLeft="8dp"
                android:textSize="32sp"
                android:background="@color/colorPrimary"
                android:textColor="@color/white"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/add_vaccination"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="16dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Vaccination Details"
                android:gravity="center"
                android:layout_marginTop="8px"
                android:textSize="18dp"
                android:background="@color/colorDordgerblue"
                android:textColor="@color/colorWhite"/>
                <Spinner
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
            <Spinner
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
            <EditText
                android:id="@+id/etdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Select Date"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/my_input"
                android:layout_marginTop="16dp"

                />
            <EditText
                android:id="@+id/txtacquisitiondate"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:hint="Note"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:gravity="start"
                android:background="@drawable/my_input"
                android:layout_marginTop="16dp"


                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enroll flock"
                android:background="@color/colorDordgerblue"
                android:textColor="@color/colorWhite"
                android:textSize="18dp"
                android:layout_marginTop="16dp"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/vaccination_table"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Vaccination table"
            android:gravity="center"
            android:layout_marginTop="8px"
            android:textSize="18dp"
            android:background="@color/colorDordgerblue"
            android:textColor="@color/colorWhite"/>
   <HorizontalScrollView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       >



       <TableLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"

           >

           <TableRow
               android:layout_width="match_parent"
               android:layout_height="match_parent"


               >
               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:text="AGE"
                   android:gravity="center"
                   android:layout_marginTop="8px"
                   android:textSize="18dp"
                   android:background="@color/colorDordgerblue"
                   android:textColor="@color/colorWhite"/>

               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="VACCINE"
                   android:gravity="center"
                   android:layout_marginTop="8px"
                   android:padding="8dp"
                   android:textSize="18dp"
                   android:background="@color/colorDordgerblue"
                   android:textColor="@color/colorWhite"/>
               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="MODE OF VACCINATION"
                   android:gravity="center"
                   android:layout_marginTop="8px"
                   android:textSize="18dp"
                   android:padding="8dp"
                   android:background="@color/colorDordgerblue"
                   android:textColor="@color/colorWhite"/>
               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="NOTE THIS"
                   android:gravity="center"
                   android:layout_marginTop="8px"
                   android:padding="8dp"
                   android:textSize="18dp"
                   android:background="@color/colorDordgerblue"
                   android:textColor="@color/colorWhite"/>
           </TableRow>


           <TableRow
               android:layout_width="match_parent"
               android:layout_height="wrap_content"

               >

               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:text="1 day "
                   android:gravity="center"
                   android:textSize="18dp"
                   android:background="@drawable/my_table"
                   android:padding="8dp"

                   />

               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:text="Newcatle and \n Bronchitis"
                   android:gravity="center"
                   android:background="@drawable/my_table"
                   android:padding="8dp"
                   android:textSize="18dp"
                   />
               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:text="Aerosol Spray"
                   android:gravity="center"
                   android:padding="8dp"
                   android:background="@drawable/my_table"
                   android:textSize="18dp"
                   />
               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:text="This is mostly for \n commercial purpose "
                   android:gravity="center"
                   android:padding="8dp"
                   android:background="@drawable/my_table"
                   android:textSize="18dp"
                   />
           </TableRow>

           <TableRow
               android:layout_width="match_parent"
               android:layout_height="match_parent" />

           <TableRow
               android:layout_width="match_parent"
               android:layout_height="match_parent" />
       </TableLayout>

   </HorizontalScrollView>
        </LinearLayout>
    </LinearLayout>

</ScrollView>